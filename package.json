{
	"name": "next-boilerplate",
	"version": "2.0.5",
	"description": "Boilerplate project for Next.js",
	"author": "sxperlinx",
	"license": "MIT",
	"keywords": [
		"nextjs",
		"boilerplate",
		"typescript",
		"eslint",
		"prettier",
		"tailwindcss"
	],
	"workspaces": ["./*"],
	"repository": {
		"type": "git",
		"url": "https://github.com/sxperlinx/Next-Boilerplate",
		"directory": "."
	},
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"test:watch": "jest --watch",
		"test": "jest",
		"format": "prettier --write .",
		"app:dev": "node ./src/scripts/run/dev.mjs",
		"app:start": "node ./src/scripts/run/start.mjs",
		"app:lint": "node ./src/scripts/quality/lint.mjs",
		"drizzle": "node ./src/scripts/setup/drizzle.mjs",
		"docker": "node ./src/scripts/setup/docker.mjs",
		"prepare": "husky",
		"lint-staged": "lint-staged"
	},
	"dependencies": {
		"@heroicons/react": "^2.2.0",
		"@next/env": "^15.3.0",
		"@tailwindcss/postcss": "^4.1.4",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"next": "15.3.0",
		"postcss": "^8.5.3",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"tailwindcss": "^4.1.4"
	},
	"devDependencies": {
		"@inquirer/prompts": "^7.4.1",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.24.0",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^22.14.1",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"@typescript-eslint/eslint-plugin": "^8.30.1",
		"@typescript-eslint/parser": "^8.30.1",
		"eslint": "^9.24.0",
		"eslint-config-next": "15.3.0",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-jsdoc": "^50.6.9",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-tailwindcss": "^3.18.0",
		"eslint-plugin-unused-imports": "^4.1.4",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"lint-staged": "^15.5.1",
		"prettier": "^3.5.3",
		"prettier-plugin-jsdoc": "^1.3.2",
		"prettier-plugin-organize-imports": "^4.1.0",
		"prettier-plugin-sort-imports": "^1.8.7",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"tailwind-merge": "^3.2.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.30.1"
	},
	"lint-staged": {
		"*.ts?(x)": ["bun run format", "bun run app:lint"]
	}
}
